---
import BasicsForm from "@/components/form/BasicsForm";
import ListCards from "@/components/form/ListCards";
import LocationForm from "@/components/form/LocationForm";
import { ResumeProvider } from "@/contexts/ResumeContext";
import "@/styles/main.css";
---

<div class="p-4 flow" id="form">
    <ResumeProvider>
        <BasicsForm client:load />
        <LocationForm client:load />
        <ListCards
            componentName={"ProfileForm"}
            legend={"Profiles"}
            formID={"profiles"}
            client:load
        />
        <ListCards
            componentName={"WorkForm"}
            legend={"Work Experience"}
            formID={"work"}
            client:load
        />
        <ListCards
            componentName={"VolunteerForm"}
            legend={"Volunteers"}
            formID={"volunteer"}
            client:load
        />
        <ListCards
            componentName={"EducationForm"}
            legend={"Education"}
            formID={"education"}
            client:load
        />
        <ListCards
            componentName={"AwardForm"}
            legend={"Awards"}
            formID={"awards"}
            client:load
        />
        <ListCards
            componentName={"CertificateForm"}
            legend={"Certificates"}
            formID={"certificates"}
            client:load
        />
        <ListCards
            componentName={"PublicationForm"}
            legend={"Publications"}
            formID={"publications"}
            client:load
        />
        <ListCards
            componentName={"SkillForm"}
            legend={"Skills"}
            formID={"skills"}
            client:load
        />
        <ListCards
            componentName={"LanguageForm"}
            legend={"Languages"}
            formID={"languages"}
            client:load
        />
        <ListCards
            componentName={"InterestForm"}
            legend={"Interests"}
            formID={"interests"}
            client:load
        />
        <ListCards
            componentName={"ReferenceForm"}
            legend={"References"}
            formID={"references"}
            client:load
        />
        <ListCards
            componentName={"ProjectForm"}
            legend={"Projects"}
            formID={"projects"}
            client:load
        />
    </ResumeProvider>
</div>
