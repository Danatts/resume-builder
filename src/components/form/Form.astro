---
import Basics from "@/components/form/Basics.astro";
import Location from "@/components/form/Location.astro";
import RenderCards from "@/components/form/RenderCards";
import "@/styles/main.css";
---

<div class="p-4 flow" id="form">
    <Basics />
    <Location />
    <RenderCards
        componentName={"ProfileCard"}
        legend={"Profiles"}
        formID={"profiles"}
        client:load
    />
    <RenderCards
        componentName={"WorkCard"}
        legend={"Work Experience"}
        formID={"work"}
        client:load
    />
    <RenderCards
        componentName={"VolunteerCard"}
        legend={"Volunteers"}
        formID={"volunteer"}
        client:load
    />
    <RenderCards
        componentName={"EducationCard"}
        legend={"Education"}
        formID={"education"}
        client:load
    />
</div>
